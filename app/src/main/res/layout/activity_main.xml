<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/bleu_fond"
    tools:context=".view.MainActivity">

    <TextView
        android:id="@+id/city_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Bordeaux"
        android:textColor="@color/Titre"
        android:textSize="50sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/temperature_celsius_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Température"
        android:textColor="@color/secondaryTextColor"
        android:textSize="29sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/weather_image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:contentDescription="Weather icon"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/feels_like_temperature_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Température ressentie"
        android:textColor="@color/secondaryTextColor"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
